NODE_ENV=production
PORT=5000

# Production Database - Replace with your production database
DATABASE_URL="postgresql://username:password@your-db-host:5432/smart_campus_prod"

# Frontend URL - Replace with your domain
FRONTEND_URL=https://your-domain.com

# JWT Security - Generate strong secrets
JWT_SECRET=your_super_secure_production_jwt_secret_key_minimum_32_characters
JWT_EXPIRE=7d

# AI Services
AI_SERVICE_URL=https://your-ai-service-url.com

# File Upload
MAX_FILE_SIZE=10485760

# CORS Origins - Add your production domains
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Security
SESSION_SECRET=your_session_secret_key_for_production

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Redis for Session Storage (optional)
REDIS_URL=redis://localhost:6379