{
  "name": "smart-campus-backend",
  "version": "1.0.0",
  "description": "Smart Campus Portal Backend API",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "prod": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "npm install && npx prisma generate",
    "migrate": "npx prisma migrate deploy && npm run seed",
    "seed": "node src/scripts/seedProductionData.js",
    "render-build": "npm install && npx prisma generate && npx prisma migrate deploy",
    "test": "jest",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1",
    "jsonwebtoken": "^9.0.1",
    "bcryptjs": "^2.4.3",
    "@prisma/client": "^5.1.1",
    "socket.io": "^4.7.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "redis": "^4.6.7",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "prisma": "^5.1.1",
    "jest": "^29.6.1",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}